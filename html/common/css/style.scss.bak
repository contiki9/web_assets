/* Base //body { … }
   ----------------------------------------------------------------- */
html,body{
	color: $text;
	@include cnt-font-size(16);
	font-family: "HG明朝B", "ＭＳ Ｐ明朝", "ＭＳ 明朝", serif;
	letter-spacing: 0.1rem;
	//font-family: 游ゴシック体, 'Yu Gothic', YuGothic, 'ヒラギノ角ゴシック Pro', 'Hiragino Kaku Gothic Pro', メイリオ, Meiryo, Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif;
}
h1, h2, h3, h4, h5, h6{
	margin: 0;
	padding: 0;
	line-height: 1.5;
	@include cnt-font-size(16);
	font-family: "HG明朝B", "ＭＳ Ｐ明朝", "ＭＳ 明朝", serif;
	//font-family: 游ゴシック体, 'Yu Gothic', YuGothic, 'ヒラギノ角ゴシック Pro', 'Hiragino Kaku Gothic Pro', メイリオ, Meiryo, Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif;
    @include cnt-font-size(16);
    ont-family: 游ゴシック体, 'Yu Gothic', YuGothic, 'ヒラギノ角ゴシック Pro', 'Hiragino Kaku Gothic Pro', メイリオ, Meiryo, Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif;
}
h1, h2, h3, h4, h5, h6{ont-family: 游ゴシック体, 'Yu Gothic', YuGothic, 'ヒラギノ角ゴシック Pro', 'Hiragino Kaku Gothic Pro', メイリオ, Meiryo, Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif;}
ul{
    list-style: none;
    padding-left: 0;
}

p{line-height: 1.6;}

a{
    color: $text;
	&:hover{
		color: $text;
		text-decoration: none;
	}
    }
}


